{
  "env": {
    "mocha": true,
    "commonjs": true,
    "browser": true,
  },
  "extends": "eslint:recommended",
  "globals": {
    "assert": false,
    "sinon": false,
    "Promise": false,
  },
  "rules": {
    "block-scoped-var": "error",
    "eqeqeq": "error",
    "no-console": [
      "error",
      { allow: ["warn", "error"] },
    ],
    "no-use-before-define": [
      "error",
      {"functions": false},
    ],
    "strict": ["error", "safe"],
  },
  "parserOptions": {
    "ecmaVersion": 6,
  }
}
